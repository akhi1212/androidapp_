<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Create a poll"
        app:titleTextColor="@android:color/black"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textAlignment="textStart"
                    app:boxBackgroundColor="@android:color/white"
                    android:hint="Name of the poll">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/quiz_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_box"
                        android:padding="12dp"
                        android:gravity="top"
                        android:textColor="@android:color/black"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/is_this_paid_quiz_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Is this a paid poll?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <CheckBox
                        android:id="@+id/checkbox_paid"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginEnd="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paid_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_box"
                        android:ems="10"
                        android:hint="Fees in points"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/winner_points_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Winner Points"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/winner_points_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/rounded_box"
                        android:ems="10"
                        android:hint="0 Points"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="12dp">

                    <CheckBox
                        android:id="@+id/t_and_c_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/terms_tv"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:text="I agree agree to KheloD's Terms of Service and Privacy Policy"
                        android:layout_weight="1"/>

                </LinearLayout>

                <Button
                    android:id="@+id/Quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="90dp"
                    android:backgroundTint="#8AC640"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:background="@drawable/rounded_btn"
                    android:text="Quiz"
                    android:textColor="@android:color/white"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Add a location (Optional)"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/new_article_location_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/create_quiz_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#8AC640"
            android:minHeight="52dp"
            android:text="Create"
            android:textColor="@android:color/white"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>