<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="0dp"
    android:id="@+id/bottom_sheet">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/cricket"
        android:layout_gravity="bottom"
        android:alpha="0.75"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_green"
            app:title="Match Details"
            app:navigationIcon="@drawable/ic_baseline_keyboard_arrow_down_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/team_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi Capitals"
                android:textColor="@color/dark_green"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="@color/dark_green"
                android:textSize="19sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/team_two_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi Capitals"
                android:textColor="@color/dark_green"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delhi Capitals 157/8  v Kings XI Punjab 157/8 "
            android:textColor="@color/dark_green"
            android:textSize="19sp"
            android:layout_margin="8dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/stat_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match tied (Delhi Capitals won the one-over eliminator)"
            android:textColor="@color/dark_green"
            android:textSize="19sp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/match_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ODI"
            android:textColor="@color/dark_green"
            android:textSize="19sp"
            android:layout_margin="8dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/create_a_poll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_poll"
        android:background="@drawable/button_round_background_green"
        android:layout_margin="12dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_gravity="bottom|center"/>

</FrameLayout>