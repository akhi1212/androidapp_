<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_green"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/transaction_item_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/points"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transaction_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bought Points"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="8dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/transaction_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+250 Points"
                        android:textSize="16sp"
                        android:textColor="@color/dark_green"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DD/MM?/YYYY"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Points"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/transaction_current_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+250 Points"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Points Redeemed "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/transaction_item_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+250 Points"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/transaction_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upi_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI Id"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/transaction_upi_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc23@xyz"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bank_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account No."
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/transaction_acc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXX"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IFSC"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/transaction_payment_ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KRNBC7878"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipient Name"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/transaction_recipient_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+915121515454"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                android:id="@+id/approve_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_approve"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:tint="@color/dark_green"
                android:layout_margin="12dp"/>

            <ImageButton
                android:id="@+id/reject_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_reject"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:tint="@color/red"
                android:layout_margin="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>