<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5fce3"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5fce3">

        <LinearLayout
            android:id="@+id/profile_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:transitionName="profile_bar"
            android:background="#f5fce3">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/main_item_profile_pic"
                android:layout_width="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_user_pic"
                app:civ_border="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="No Network Available"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/event_view_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="No Network Available"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:visibility="visible"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/main_item_menu_img"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:src="@drawable/ic_menu"
                android:visibility="visible"/>

        </LinearLayout>


        <TextView
            android:id="@+id/main_item_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="No Network Available"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/main_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:text="No Network Available"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fees_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To pay : "
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:paddingStart="17dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/quiz_view_fees_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No Network"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/main_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="12"
                android:text="No Network Available"
                android:textColor="#000"
                android:textSize="16sp"
                android:paddingStart="17dp"
                android:paddingEnd="12dp"/>

            <TextView
                android:id="@+id/main_item_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="12"
                android:text="No Network Available"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:paddingStart="17dp"
                android:paddingEnd="12dp" />

            <FrameLayout
                android:id="@+id/winner_points_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/winner_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="12"
                    android:text="Winner Points"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingStart="17dp"
                    android:paddingEnd="12dp"
                    android:gravity="center"
                    android:background="@drawable/ribbon"/>

            </FrameLayout>

            <TextView
                android:id="@+id/main_item_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="No Network Available"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/main_item_main_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:transitionName="main_item_main_image"
            tools:src="@drawable/picture"/>

        <Button
            android:id="@+id/play_quiz_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to play"
            android:background="@drawable/button_round_background_green"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>